{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "pnpm install --prod=false",
  "buildCommand": "pnpm turbo run build --filter=@budi/api --filter=@budi/web",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "services/api/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ]
}
