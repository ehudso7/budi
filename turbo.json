{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": { "cache": false, "persistent": true },
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", "build/**"] },
    "lint": { "dependsOn": ["^build", "^lint"] },
    "typecheck": { "dependsOn": ["^build", "^typecheck"] },
    "test": { "dependsOn": ["^build", "^test"] }
  }
}